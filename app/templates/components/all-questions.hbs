<div class="d-flex flex-column pt-5">
  <div class="m-auto w-75 pt-5">
    <h1 class = 'h2'>List of questions</h1>
    {{#each questions as |question|}}
      <div class='mb-3'>
        {{#link-to 'question-edit' question}}{{question.title}}{{/link-to}}
        <div>
          {{#if question.tags}}
            {{#each question.tags as |tag|}}
              <a class='btn btn-primary text-white' 
              href='/dashboard/1/{{tag.id}}'>{{tag.name}}</a>
            {{/each}}
          {{/if}}
        </div>   
        <span>{{question.user.email}}</span>   
      </div>
    {{/each}}
  </div>
  <ul class='d-flex list-unstyled w-75 m-auto'>
    {{#each questions.pages as |page|}}
      <li class='mr-2'>
        <a class = 'btn btn-primary text-white' 
        href='/dashboard/{{page}}/{{questions.filter}}'>{{page}}</a>
      </li>
    {{/each}}
  </ul>
</div>

