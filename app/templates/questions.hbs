<div class="d-flex h-100 mt-5">
  <div class="m-auto w-100">
    <h1 class = 'h4 w-50 m-auto'>Ask a question</h1>
    <form>
      <div class="form-group w-50 m-auto pt-3 {{if model.errors.title 'has-error'}}">
        <label for="exampleInputEmail1">Title</label>
        {{input value=model.title type="text" class="form-control" 
        aria-describedby="emailHelp" placeholder="Enter title"}}

        {{#if model.errors.title}}
          <div class="text-danger">
            {{model.errors.title.firstObject.message}}
          </div>
        {{/if}}
      </div>
      <div class="form-group w-50 m-auto pt-3 {{if model.errors.description 'has-error'}}">
        <label for="description">Description</label>
        {{textarea value=model.description class="form-control" 
        rows='5'
        id="description" placeholder="Enter description"}}
        {{#if model.errors.description}}
          <div class="text-danger">
            {{model.errors.description.firstObject.message}}
          </div>
        {{/if}}
      </div>
      <div class="form-group w-50 m-auto pt-3">
        <label for="tags">Tags</label>
        {{textarea value=model.tags class="form-control" 
        id="tags" placeholder="Comma separated tags"}}
      </div>
      <div class="w-50 m-auto pt-3">
        <button type="submit" class="w-100 m-auto btn btn-primary" 
        {{action 'update'}}>
          Save
        </button>
        <button type="submit" class="w-100 m-auto btn btn-danger" 
        {{action 'delete'}}>
          Delete
        </button>
        <div class='text-danger'>
          {{#if errorMessage}}
            {{errorMessage}}
          {{/if}}
        </div>
      </div>
    </form>
  </div>
</div>