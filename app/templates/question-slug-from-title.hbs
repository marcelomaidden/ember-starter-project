<div class="d-flex h-100 mt-5">
  <div class="m-auto w-100">
    <h1 class = 'h4 w-50 m-auto'>Question</h1>
    <h2 class='w-50 m-auto'>{{model.title}}</h2>
    <p class='w-50 m-auto'>{{model.description}}</p>
    <form>
      <h3 class='w-50 h4 m-auto'>Answer</h3>
      <div class="w-50 m-auto pt-3">
        <div class='w-100'>Body</div>
        <div class="w-100">
          {{textarea rows='5' class='form-control'}}
        </div>
        
        <button type="submit" class="w-100 m-auto btn btn-primary" 
        {{action 'create'}}>
          Save
        </button>
        <div class='text-danger'>
          {{#if errorMessage}}
            {{errorMessage}}
          {{/if}}
        </div>
      </div>
    </form>
  </div>
</div>