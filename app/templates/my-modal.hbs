<!-- Modal -->
<div class="position-relative" id="deleteQuestion" style='top: -300px'
tabindex="-1" role="dialog" aria-labelledby="deleteQuestion" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete it?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" 
        data-dismiss="modal" {{action 'closeModal'}}>Close</button>
        <button type="button" class="btn btn-danger" {{action 'delete'}}>Delete</button>
      </div>
    </div>
  </div>
</div>